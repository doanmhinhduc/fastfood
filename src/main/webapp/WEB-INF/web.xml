<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>CreateFoodServlet</servlet-name>
        <servlet-class>com.example.fastfood.controller.fastfood.CreateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateFoodServlet</servlet-name>
        <url-pattern>/food/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetListFoodServlet</servlet-name>
        <servlet-class>com.example.fastfood.controller.fastfood.GetListFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetListFoodServlet</servlet-name>
        <url-pattern>/food/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>foodDetailServlet</servlet-name>
        <servlet-class>com.example.fastfood.controller.fastfood.foodDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>foodDetailServlet</servlet-name>
        <url-pattern>/food/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditFoodServlet</servlet-name>
        <servlet-class>com.example.fastfood.controller.fastfood.EditFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditFoodServlet</servlet-name>
        <url-pattern>/food/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <servlet-class>com.example.fastfood.controller.fastfood.DeleteFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <url-pattern>/food/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <servlet-class>com.example.fastfood.controller.category.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <url-pattern>/category/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetListCategoryServlet</servlet-name>
        <servlet-class>com.example.fastfood.controller.category.GetListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetListCategoryServlet</servlet-name>
        <url-pattern>/category/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoryDetailServlet</servlet-name>
        <servlet-class>com.example.fastfood.controller.category.CategoryDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryDetailServlet</servlet-name>
        <url-pattern>/category/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditCategoryServlet</servlet-name>
        <servlet-class>com.example.fastfood.controller.category.EditCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCategoryServlet</servlet-name>
        <url-pattern>/category/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <servlet-class>com.example.fastfood.controller.category.DeleteCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <url-pattern>/category/delete</url-pattern>
    </servlet-mapping>

</web-app>